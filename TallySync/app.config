<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Tally Configuration -->
    <add key="TallyUrl" value="http://localhost:9000" />
    <add key="TallyHost" value="localhost" />
    <add key="TallyPort" value="9000" />
    <add key="TallyCompany" value="" />
    
    <!-- Cloud API Configuration -->
    <add key="PublicApiUrl" value="https://your-replit-app.replit.dev/api/tally/push" />
    <add key="ApiKey" value="YOUR_API_KEY_HERE" />
    <add key="BaseUrl" value="https://your-replit-app.replit.dev" />
    <add key="TimeoutSeconds" value="60" />
    
    <!-- Sync Configuration -->
    <add key="SyncIntervalMinutes" value="15" />
    <add key="BatchSize" value="100" />
    <add key="MaxRetries" value="5" />
    <add key="BaseDelayMs" value="1000" />
    
    <!-- Date Range for Sync -->
    <add key="FromDate" value="2024-01-01" />
    <add key="ToDate" value="2024-12-31" />
    
    <!-- Logging -->
    <add key="LogLevel" value="Information" />
    <add key="LogPath" value="logs/app.log" />
  </appSettings>
  
  <connectionStrings>
    <!-- Local storage for tracking sent records -->
    <add name="LocalDb" connectionString="Data Source=TallySync.db;Version=3;" providerName="System.Data.SQLite" />
  </connectionStrings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>