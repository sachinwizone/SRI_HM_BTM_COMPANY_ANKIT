{
  "Tally": {
    "Host": "localhost",
    "Port": 9000,
    "Company": "",
    "PollMinutes": 15,
    "BaseUrl": "http://localhost:9000"
  },
  "Cloud": {
    "BaseUrl": "https://your-replit-app.replit.dev",
    "ApiKey": "YOUR_API_KEY_HERE",
    "TimeoutSec": 60,
    "PushEndpoint": "/api/tally/push"
  },
  "State": {
    "Path": "%PROGRAMDATA%/Wizone/TallyConnector/state.json"
  },
  "Retry": {
    "MaxAttempts": 5,
    "BaseDelayMs": 1000
  },
  "Sync": {
    "IntervalMinutes": 15,
    "BatchSize": 100,
    "DateRange": {
      "FromDate": "2024-01-01",
      "ToDate": "2024-12-31"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "HH:mm:ss "
    },
    "File": {
      "Path": "%PROGRAMDATA%/Wizone/TallyConnector/logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  }
}